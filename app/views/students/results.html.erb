			    <td> <%= @totalhash[2015][0][:physicstot] %></td>
			    <td> <%= @totalhash[2015][0][:chemistrytot] %></td>
			</tr>
			
		</table>
	<% end %>
	</body>
<p><%= link_to "Back to Students", { action: "index" } %></p>

</body>
</html>